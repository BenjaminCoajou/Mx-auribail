<section class="container trainingCards" id="home-training">
    <div class="row my-5 py-5">
        <div class="col-6">
            <div class="card">
                <img class="card-img-top img-fluid" src="assets/img/moto1.jpg" alt="image moto 1">
                <div class="card-body">
                    <h5 class="card-title">Entrainement Adulte</h5>
                    {% if trainingAdult %}
                        <ul>
                            <li><p class="card-text"> Place disponible : {{ trainingAdult.slot }} </p></li>
                            <li><p class="card-text"> Date : {{ trainingAdult.trainingDate | date('d/m/Y') }} </p></li>
                            <li><p class="card-text"> Les informations importantes : {{ trainingAdult.info }} </p></li>
                            <li><p class="card-text"> Date d'ouverture de l'inscription : {{ trainingAdult.openingRegistrationDate | date('d/m/Y') }} </p></li>
                        </ul>

                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: {{ placeAdult / trainingAdult.slot * 100  }}%" aria-valuenow="3" aria-valuemin="0" aria-valuemax={{ trainingAdult.slot }}>
                            </div>
                        </div>
                    {% else %}
                        <p>Pas d'entrainement de prévu pour le moment.</p>
                    {% endif %}
                    
                </div>
                {% if app.user and trainingAdult and listIdAdult and app.user.id in listIdAdult %}
                    <a href="{{ path('home_unsub', {'training': trainingAdult.id, 'user': app.user.id}) }}" class="btn btn-danger">Se désinscrire</a>
                {% elseif trainingAdult 
                and app.user 
                and "now" | date('Y') - app.user.birthday | date('Y') >= 18 
                and trainingAdult.openingRegistrationDate | date('d/m/Y') <= "now" | date('d/m/Y')
                %}
                    <a href="{{ path('home_inscription', {'training': trainingAdult.id, 'user': app.user.id}) }}" class="btn btn-primary">Inscription</a>
                {% else %}
                    <a href="#" class="btn btn-primary disabled">Inscription</a>
                {% endif %}
            </div>
        </div>


        <div class="col-6">        
            <div class="card" >
                <img class="card-img-top img-fluid" src="assets/img/moto2.jpg" alt="image moto 2">
                <div class="card-body">
                    <h5 class="card-title">Entrainement Enfant</h5>
                    {% if trainingChild %}
                        <ul>
                            <li><p class="card-text"> Place disponible : {{ trainingChild.slot }} </p></li>
                            <li><p class="card-text"> Date : {{ trainingChild.trainingDate | date('d/m/Y') }} </p></li>
                            <li><p class="card-text"> Les informations importantes : {{ trainingChild.info }} </p></li>
                            <li><p class="card-text"> Date d'ouverture de l'inscription : {{ trainingChild.openingRegistrationDate | date('d/m/Y') }} </p></li>            
                        </ul>

                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: {{ placeEnfant / trainingChild.slot * 100  }}%"aria-valuenow={{ trainingAdult.slot }} aria-valuemin="0" aria-valuemax={{ trainingAdult.slot }}>
                            </div>
                        </div>
                    {% else %}
                        <p>Pas d'entrainement de prévu pour le moment.</p>
                    {% endif %}
                </div>
                {% if app.user and trainingChild and listIdChild and app.user.id in listIdChild %}
                    <a href="{{ path('home_unsub', {'training': trainingChild.id, 'user': app.user.id}) }}" class="btn btn-danger">Se désinscrire</a>
                {% elseif trainingChild 
                and app.user 
                and "now" | date('Y') - app.user.birthday | date('Y') < 18 
                and trainingChild.openingRegistrationDate | date('d/m/Y') <= "now" | date('d/m/Y') 
                %}            
                    <a href="{{ path('home_inscription', {'training': trainingChild.id, 'user': app.user.id}) }}" class="btn btn-primary">Inscription</a>
                {% else %}
                    <a href="#" class="btn btn-primary disabled">Inscription</a>
                {% endif %}                        
                           


               
            </div>
        </div>
    </div>
</section>